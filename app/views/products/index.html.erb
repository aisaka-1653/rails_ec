<header class="bg-dark bg-gradient py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Apparel Shop</h1>
      <p class="lead fw-normal text-white-50 mb-0">Global Threads: Wear the World</p>
    </div>
  </div>
</header>
<section class="py-5">
  <% flash.each do |type, message| %>
    <% if message.present? %>
      <div class="container alert <%= type == 'notice' ? 'alert-success' : 'alert-danger' %> text-center mb-4">
        <%= message %>
      </div>
    <% end %>
  <% end %>
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <%= render @products %>
    </div>
  </div>
</section>
