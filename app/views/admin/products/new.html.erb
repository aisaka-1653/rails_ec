<div class="container mt-4">
  <% if @product.errors.present? %>
    <ul id="error_explanation">
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="container px-4 px-lg-5 my-4">
  <%= form_with model: [:admin, @product] do |f| %>
    <div class="form_group mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", id: "product_name" %>
    </div>
    <div class="form_group mb-3">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-control", id: "product_content" %>
    </div>
    <div class="row">
      <div class="form_group col-sm-3 mb-3">
        <%= f.label :price, class: "form-label" %>
        <%= f.text_field :price, class: "form-control", id: "product_price" %>
      </div>
    </div>
    <div class="form_group mb-5">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image, class: "form-control", id: "product_image" %>
    </div>
    <div class="d-flex gap-4">
      <%= f.submit nil, class: "btn btn-outline-primary" %>
      <%= link_to "キャンセル", admin_products_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>