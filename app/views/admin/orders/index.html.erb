<div class="container px-4 px-lg-5 my-5">
  <table class="table table-hover align-middle text-center">
    <thead>
      <tr>
        <th scope="col"><%= Order.human_attribute_name(:id) %></th>
        <th scope="col"><%= Order.human_attribute_name(:user_name) %></th>
        <th scope="col"><%= t('.purchased_items_count') %></th>
        <th scope="col"><%= t('.order_date_and_time') %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th scope="row"><%= order.id %></th>
          <td><%= order.user_name %></td>
          <td><%= purchased_items_count(order) %></td>
          <td><%= l order.created_at, format: :long %></td>
          <td><%= link_to "詳細", admin_order_path(order), class: "btn btn-outline-secondary px-3 mr-3" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
