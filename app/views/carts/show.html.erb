<div class="container my-5">
  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted"><%= t ".cart.your_cart" %></span>
        <span class="badge badge-secondary badge-pill">3</span>
      </h4>
      <ul class="list-group mb-3">
        <% @cart_items.each do |cart_item| %>
          <li class="list-group-item d-flex justify-content-between align-items-center lh-condensed">
            <div>
              <h6 class="my-0"><%= cart_item.product.name %></h6>
              <small class="text-muted"><%= "数量: #{cart_item.quantity}" %></small>
            </div>
            <span class="text-muted"><%= number_to_currency(cart_item.product.price) %></span>
          </li>
        <% end %>
        <li class="list-group-item d-flex justify-content-between">
          <span><%= t ".cart.total_price" %></span>
          <strong>$20</strong>
        </li>
      </ul>
      <form class="card p-2">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="<%= t ".promotion.promo_code_hint" %>">
          <div class="input-group-append">
            <button type="submit" class="btn btn-secondary"><%= t ".promotion.redeem" %></button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-md-8 order-md-1">
      <h4 class="text-muted mb-3"><%= t ".address.billing_address" %></h4>
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName"><%= t ".address.first_name" %></label>
            <input type="text" class="form-control" id="firstName" placeholder="<%= t ".address.first_name_hint" %>" value="" required>
            <div class="invalid-feedback">
              <%= t ".address.first_name_warn" %>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName"><%= t ".address.last_name" %></label>
            <input type="text" class="form-control" id="lastName" placeholder="<%= t ".address.last_name_hint" %>" value="" required>
            <div class="invalid-feedback">
              <%= t ".address.last_name_warn" %>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="username"><%= t ".address.username" %></label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">@</span>
            </div>
            <input type="text" class="form-control" id="username" placeholder="Username" required>
            <div class="invalid-feedback" style="width: 100%;">
              <%= t ".address.username_warn" %>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="email"><%= t ".address.email" %></label>
          <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
          <div class="invalid-feedback">
            <%= t ".address.email_warn" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 mb-3">
            <label for="zip"><%= t ".address.zip" %></label>
            <input type="text" class="form-control" id="zip" placeholder="<%= t ".address.zip_hint" %>" required>
            <div class="invalid-feedback">
              <%= t ".address.zip_warn" %>
            </div>
          </div>
          <div class="col-md-5 mb-3">
            <label for="country"><%= t ".address.country" %></label>
            <select class="form-select d-block w-100" id="country" required>
              <option selected>日本</option>
              <option>United States</option>
            </select>
          </div>
          <div class="col-md-4 mb-3">
            <label for="state"><%= t ".address.state" %></label>
            <select class="form-select d-block w-100" id="state" required>
              <option selected>東京</option>
              <option>California</option>
            </select>
          </div>
        </div>
        <div class="mb-3">
          <label for="address"><%= t ".address.primary_address" %></label>
          <input type="text" class="form-control" id="address" placeholder="<%= t ".address.primary_address_hint" %>" required>
          <div class="invalid-feedback">
            <%= t ".address.primary_address_warn" %>
          </div>
        </div>
        <div class="mb-3">
          <label for="address2"><%= t ".address.secondary_address" %></label>
          <input type="text" class="form-control" id="address2" placeholder="<%= t ".address.secondary_address_hint" %>" required>
          <div class="invalid-feedback">
            <%= t ".address.secondary_address_warn" %>
          </div>
        </div>
        <hr class="my-4">
        <h4 class="text-muted mb-3"><%= t ".card.payment" %></h4>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="cc-name"><%= t ".card.name_on_card" %></label>
            <input type="text" class="form-control" id="cc-name" placeholder="<%= t ".card.name_on_card_hint" %>" required>
            <div class="invalid-feedback">
              <%= t ".card.name_on_card_warn" %>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="cc-number"><%= t ".card.credit_card_number" %></label>
            <input type="text" class="form-control" id="cc-number" placeholder="<%= t ".card.credit_card_number_hint" %>" required>
            <div class="invalid-feedback">
              <%= t ".card.credit_card_number_warn" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 mb-3">
            <label for="cc-expiration"><%= t ".card.expiration" %></label>
            <input type="text" class="form-control" id="cc-expiration" placeholder="<%= t ".card.expiration_hint" %>" required>
            <div class="invalid-feedback">
              <%= t ".card.expiration_warn" %>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <label for="cc-cvv"><%= t ".card.cvv" %></label>
            <input type="text" class="form-control" id="cc-cvv" placeholder="<%= t ".card.cvv_hint" %>" required>
            <div class="invalid-feedback">
              <%= t ".card.cvv_warn" %>
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <div class="d-grid gap-2">
          <button class="btn btn-primary btn-lg btn-checkout" type="submit"><%= t ".cart.continue_to_checkout" %></button>
        </div>
      </form>
    </div>
  </div>
</div>
<div data-controller="cart-form-validation"></div>
